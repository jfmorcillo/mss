{
    "slug":"mds_samba4",
    "name":"Windows domain controller and file sharing management",
    "description":"Use MBS as a Domain Controller with SAMBA 4 and provide Windows file shares on your network",
    "categories":[
        {
            "slug":"users",
            "name":"Users"
        }
    ],
    "actions":[
        {
            "type":"link",
            "name":"Management interface",
            "value":"https://@HOSTNAME@/mmc/main.php"
        }
    ],
    "packages":[
        {
            "name":"all",
            "rpms":[
                "mmc-web-samba4",
                "python-mmc-samba4",
                "python-s4sync",
                "samba4-dc"
            ]
        }
    ],
    "config":[
        {
            "type":"options",
            "name":"smb_mode",
            "require":"yes",
            "label":"Mode",
            "help":"Which type of provisioning of SAMBA 4",
            "options":[
                {
                    "name":"Primary Domain Controller",
                    "value":"dc"
                }
            ]
        },
        {
            "type":"custom",
            "name":"custom"
        },
        {
            "type":"password",
            "name":"smb_passwd",
            "require":"yes",
            "validation":"valid_password",
            "label":"Administrator password",
            "help":"Password for the Microsoft domain Administrator account. Password must be composed, at least, of 8 characters with one number, one capital letter and one lowercase letter."
        }
    ],
    "module":{
        "section":"core",
        "dependencies":[
            "mds_mmc",
            "mds_dns",
            "mds_dhcp"
        ],
        "conflicts":[
            "mds_smb"
        ],
        "reboot":true
    }
}